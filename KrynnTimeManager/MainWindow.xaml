<Window x:Class="KrynnTimeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KrynnTimeManager"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
  <TabControl>
    <TabItem Header='Calendar'>
      <DockPanel>
        
        <Grid DockPanel.Dock='Top'
              Background='AliceBlue'>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width='300*' />
            <ColumnDefinition Width='65*' />
            <ColumnDefinition Width='Auto' />
            <ColumnDefinition Width='65*' />
            <ColumnDefinition Width='300*' />
          </Grid.ColumnDefinitions>
          <TextBlock x:Name='dateTimeTest'
                     TextWrapping='Wrap'
                     Text='Current DateTime'
                     Grid.Column='0' />
          <Button Width='30'
                  Grid.Column='1'>
            <TextBlock Text='Last' />
          </Button>
          <TextBlock Text='Calendar Month Year'
                     Grid.Column='2' />
          <Button Width='30'
                  Grid.Column='3'>
            <TextBlock Text='Next' />
          </Button>
          <!--<Calendar DisplayMode='Year'
                    HorizontalAlignment='Center'
                    DisplayDate='0421-01-01'
                    DisplayDateEnd='0426-12-12'
                    DisplayDateStart='0421-01-01' />-->
          <TextBlock Text='Next Event Name at This Time'
                     Grid.Column='4'
                     HorizontalAlignment='Right' />
        </Grid>
        <StackPanel DockPanel.Dock='Right'
                    Width='300'
                    Background='Gray'
                    Visibility='Collapsed'></StackPanel>
        <Grid Background='BlanchedAlmond'>
          <Grid.RowDefinitions>
            <RowDefinition Height='1*' />
            <RowDefinition Height='4*' />
            <RowDefinition Height='4*' />
            <RowDefinition Height='4*' />
            <RowDefinition Height='4*' />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width='1*' />
            <ColumnDefinition Width='1*' />
            <ColumnDefinition Width='1*' />
            <ColumnDefinition Width='1*' />
            <ColumnDefinition Width='1*' />
            <ColumnDefinition Width='1*' />
            <ColumnDefinition Width='1*' />
          </Grid.ColumnDefinitions>
        </Grid>
      </DockPanel>
    </TabItem>
    <TabItem Header='Time'>
      <Grid Background='#FFE5E5E5' />
    </TabItem>
    <TabItem Header='Campaign'>
      <Grid Background='#FFE5E5E5' />
    </TabItem>
    <TabItem Header='Events List'>
      <Grid Background='#FFE5E5E5' />
    </TabItem>
  </TabControl>
</Window>
