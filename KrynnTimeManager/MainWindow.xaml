<Window x:Class="KrynnTimeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KrynnTimeManager"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
  <TabControl>
    <TabItem Header='Calendar'>
      <DockPanel>
        <StackPanel DockPanel.Dock='Right'
                    Width='300'
                    Background='Gray'
                    Visibility='Collapsed'></StackPanel>
        <Grid DockPanel.Dock='Top'
              Background='AliceBlue'>
          <TextBlock x:Name='dateTimeTest'
                     HorizontalAlignment='Left'
                     TextWrapping='Wrap'
                     Text='Current DateTime'
                     VerticalAlignment='Top' />
          <Calendar DisplayMode='Year'
                    HorizontalAlignment='Center'
                    DisplayDate='0421-01-01'
                    DisplayDateEnd='0426-12-12'
                    DisplayDateStart='0421-01-01' />
          <TextBlock HorizontalAlignment='Right'
                     VerticalAlignment='Top'
                     Text='Next Event' />
        </Grid>
        <Grid Background='BlanchedAlmond'></Grid>
      </DockPanel>
    </TabItem>
    <TabItem Header='Time'>
      <Grid Background='#FFE5E5E5' />
    </TabItem>
    <TabItem Header='Campaign'>
      <Grid Background='#FFE5E5E5' />
    </TabItem>
    <TabItem Header='Events List'>
      <Grid Background='#FFE5E5E5' />
    </TabItem>
  </TabControl>
</Window>
